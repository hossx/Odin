<com.coinport.odin.layout.BuySellLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        tools:context="com.coinport.odin.fragment.TradeBuySellFragment">

    <LinearLayout
        android:background="@color/page_background_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scroll_panel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:paddingBottom="0dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="40dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:textColor="@color/white"
                            android:text="#"/>
                        <TextView
                            android:layout_width="120dip"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/depth_price"
                            android:paddingLeft="10dip"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/depth_amount"
                            android:paddingLeft="10dip"/>
                    </LinearLayout>
                    <ListView
                        android:id="@+id/sell_depth"
                        android:layout_width="match_parent"
                        android:layout_height="125dip"
                        android:isScrollContainer="false"
                        android:divider="@null"
                        android:layout_marginTop="8dip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/last_price"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <ListView
                        android:id="@+id/buy_depth"
                        android:layout_width="match_parent"
                        android:layout_height="125dip"
                        android:divider="@null"
                        android:isScrollContainer="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dip"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dip"
                        android:layout_marginBottom="4dip"
                        android:gravity="bottom"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="4dip">

                            <TextView
                                android:id="@+id/out_valid_label"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/trade_valid"
                                android:textSize="10dp"/>
                            <TextView
                                android:id="@+id/out_valid_amount"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:gravity="right"
                                android:text="0.0"
                                android:textSize="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="4dip"
                            android:layout_marginBottom="4dip"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/out_frozen_label"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/trade_frozen"
                                android:textSize="10dp"/>
                            <TextView
                                android:id="@+id/out_frozen_amount"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:gravity="right"
                                android:text="0.0"
                                android:textSize="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="41dip"
                            android:orientation="horizontal"
                            android:paddingLeft="4dip"
                            android:layout_marginBottom="4dip"
                            android:background="@drawable/buy_sell_input_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/buy_sell_input_border"
                                android:text="@string/trade_buy_price"/>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <EditText
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="3dp"
                                    android:gravity="right"
                                    android:background="@null"
                                    android:inputType="numberDecimal"
                                    android:ems="10"
                                    android:textCursorDrawable="@color/white"
                                    android:textColor="@color/white"
                                    android:id="@+id/buy_price_edit"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="41dip"
                            android:orientation="horizontal"
                            android:paddingLeft="4dip"
                            android:layout_marginBottom="4dip"
                            android:background="@drawable/buy_sell_input_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/buy_sell_input_border"
                                android:text="@string/trade_quantity"/>

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:gravity="right"
                                android:background="@null"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:textCursorDrawable="@color/white"
                                android:textColor="@color/white"
                                android:id="@+id/buy_quantity_edit"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="41dip"
                            android:orientation="horizontal"
                            android:paddingLeft="4dip"
                            android:layout_marginBottom="4dip"
                            android:background="@drawable/buy_sell_input_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/buy_sell_input_border"
                                android:text="@string/trade_amount"/>

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:gravity="right"
                                android:background="@null"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:textCursorDrawable="@color/white"
                                android:textColor="@color/white"
                                android:id="@+id/buy_amount_edit"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/buy"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:text="@string/trade_buy"
                            android:textColor="@color/white"
                            android:background="@drawable/trade_buy_button"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dip"
                        android:layout_marginBottom="4dip"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="4dip"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/in_valid_label"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/trade_valid"
                                android:textSize="10dp"/>
                            <TextView
                                android:id="@+id/in_valid_amount"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:gravity="right"
                                android:text="0.0"
                                android:textSize="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="4dip"
                            android:layout_marginBottom="4dip"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/in_frozen_label"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="@string/trade_frozen"
                                android:textSize="10dp"/>
                            <TextView
                                android:id="@+id/in_frozen_amount"
                                android:layout_width="0dp"
                                android:layout_weight="5"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:gravity="right"
                                android:text="0.0"
                                android:textSize="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="41dip"
                            android:orientation="horizontal"
                            android:paddingLeft="4dip"
                            android:layout_marginBottom="4dip"
                            android:background="@drawable/buy_sell_input_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/buy_sell_input_border"
                                android:text="@string/trade_sell_price"/>

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:gravity="right"
                                android:background="@null"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:textCursorDrawable="@color/white"
                                android:textColor="@color/white"
                                android:id="@+id/sell_price_edit"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="41dip"
                            android:orientation="horizontal"
                            android:paddingLeft="4dip"
                            android:layout_marginBottom="4dip"
                            android:background="@drawable/buy_sell_input_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/buy_sell_input_border"
                                android:text="@string/trade_quantity"/>

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:gravity="right"
                                android:background="@null"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:textCursorDrawable="@color/white"
                                android:textColor="@color/white"
                                android:id="@+id/sell_quantity_edit"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="41dip"
                            android:orientation="horizontal"
                            android:paddingLeft="4dip"
                            android:layout_marginBottom="4dip"
                            android:background="@drawable/buy_sell_input_border">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/buy_sell_input_border"
                                android:text="@string/trade_amount"/>

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:gravity="right"
                                android:background="@null"
                                android:inputType="numberDecimal"
                                android:ems="10"
                                android:textCursorDrawable="@color/white"
                                android:textColor="@color/white"
                                android:id="@+id/sell_amount_edit"/>
                        </LinearLayout>
                        <Button
                            android:id="@+id/sell"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:text="@string/trade_sell"
                            android:textColor="@color/white"
                            android:background="@drawable/trade_sell_button"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.coinport.odin.layout.BuySellLayout>
