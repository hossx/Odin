<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/line_gray"/>
    <ScrollView
        android:scrollbars="none"
        android:background="@color/page_background_color"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="4dip">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:layout_marginBottom="10dip"
                android:paddingLeft="4dip">
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tab_gray"
                    android:textSize="20dip"
                    android:text="@string/hello"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="fill_parent"
                    android:textColor="@color/tab_gray"
                    android:textSize="15dip"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dip"
                    android:text="@string/user_info_id"/>
                <TextView
                    android:id="@+id/account_number"
                    android:layout_width="fill_parent"
                    android:textColor="@color/white"
                    android:textSize="15dip"
                    android:gravity="right"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dip"
                    android:text="@string/user_info_name"/>
                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="fill_parent"
                    android:textColor="@color/white"
                    android:textSize="15dip"
                    android:gravity="right"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dip"
                    android:text="@string/user_info_phone"/>
                <TextView
                    android:id="@+id/account_phone"
                    android:layout_width="fill_parent"
                    android:textColor="@color/white"
                    android:textSize="15dip"
                    android:gravity="right"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:id="@+id/user_asset"
                android:background="@drawable/user_clickable_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dip"
                    android:text="@string/user_asset"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_expand"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:id="@+id/user_verify"
                android:background="@drawable/user_clickable_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dip"
                    android:text="@string/user_secure_verify"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">
                    <ImageView
                        android:id="@+id/user_secure_verify_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_expand"/>
                    <TextView
                        android:id="@+id/user_secure_verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15dip"
                        android:text="@string/user_secure_has_verified"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:id="@+id/change_pw"
                android:background="@drawable/user_clickable_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dip"
                    android:text="@string/user_secure_change_pw"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_expand"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:id="@+id/gesture_pw"
                android:background="@drawable/user_clickable_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dip"
                    android:text="@string/user_secure_gesture_pw"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_expand"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dip"
                android:layout_marginBottom="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/logout_btn"
                    android:background="@drawable/cancel_order_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/logout"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
